@model e_Library.Core.ViewModels.BookListViewModel

@{
    ViewBag.Title = "Purchase Books";
}
    <h1>Books</h1>

    <div class="col-md-2">
        <h4>Filter by Genre</h4>
        <div class="list-group">
            @Html.ActionLink("All", "Index", null, new { @class = Request["Genre"] == null ? "list-group-item active" : "list-group-item" })
            @foreach (var cat in Model.BookGenres)
            {
                @Html.ActionLink(cat.Genre, "Index", new { Genre = cat.Genre }, new { @class = Request["Genre"] == cat.Genre ? "list-group-item active" : "list-group-item" })
            }
        </div>
    </div>
<div class="col-md-10">

    @foreach (var item in Model.Books)
    {

        <div class="col-md-3" style="height:400px;padding:10px;margin:10px;border: solid thin whitesmoke">
            <div class="col-md-12">
                <img class="img" style="height:250px" src="~/Content/BookImages/@item.Image" />
            </div>
            <div class="col-md-12">
                <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong>
            </div>
            <div class="col-md-12">
                <p>@item.Author</p>
            </div>
            <div class="col-md-12">
                <h4>R @item.Price</h4>
            </div>
            <div class="col-md-12">
                <a href="#" class="btn btn-default">Add to Basket</a>
            </div>
        </div>
    }
</div>
    <div class="col-md-12 clearfix" />
