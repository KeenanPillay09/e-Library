            <div class="form-group">
                <img class="img-responsive" src="~/Content/BookImages/@image" />
            </div>

        </div>


    </div>

    <div class="form-group has-success">
        <br />
        <br />
        <div class="col-md-10">
            @Html.LabelFor(model => model.BasketTotal, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="input-group">
