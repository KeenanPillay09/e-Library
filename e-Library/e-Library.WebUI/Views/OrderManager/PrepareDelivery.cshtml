                    <img class="img-responsive" src="~/Content/QRCodes/@Model.QRCode" style="height:150px" />
                </div>
            </div>*@



    </div>

    @Html.Partial("OrderItems", Model.OrderItems)

    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <div class="form-group">
        <div class="col-md-1 col-md-10">
            <input type="submit" onclick="ValidateMsg()" value="Prepare Delivery" class="btn btn-default" id="btnPrepareDelivery" />
        </div>
    </div>

    <script>
        function ValidateMsg() { swal("Preparing Order for Delivery!", "Customer and Driver have been notified!", "success"); }
    </script>
}


