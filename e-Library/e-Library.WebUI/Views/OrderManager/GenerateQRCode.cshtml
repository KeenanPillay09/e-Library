@using (Html.BeginForm("QRCode", "OrderManager", FormMethod.Post))
{
    <h4>Generate QR Code</h4>
    <div>
        <br />
        <div class="form-group">
            <label class="control-label" for="inputSmall">Link: </label>
            <input class="form-control input-sm" type="text" id="inputSmall" name="qrcode" value=@ViewBag.qrcode>
        </div>
        <br />
        <br />
        <input type="submit" value="Generate" />
        <br />
        <br />
        @if (ViewBag.QRCodeImage != null)
        {
            <img src="@ViewBag.QRCodeImage" alt="" style="height:300px;width:300px" />
        }
    </div>

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
}

