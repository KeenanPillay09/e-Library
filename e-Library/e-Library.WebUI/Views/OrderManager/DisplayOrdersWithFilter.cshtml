 @model e_Library.Core.ViewModels.OrderStatusListViewModel

@{
    ViewBag.Title = "Orders";
}
<h2>Orders</h2>

<div class="col-md-2">
    <h4>Filter</h4>
    <div class="list-group">
        @Html.ActionLink("All", "DisplayOrdersWithFilter", null, new { @class = Request["Status"] == null ? "list-group-item active" : "list-group-item" })
        @foreach (var cat in Model.OrderStatusModels)
        {
            @Html.ActionLink(cat.OrderStatus, "DisplayOrdersWithFilter", new { Status = cat.OrderStatus }, new { @class = Request["Status"] == cat.OrderStatus ? "list-group-item active" : "list-group-item" })
        }
    </div>
</div>

<div class="col-md-10">
    <table class="table">
        <tr>
            <th>
                Created At
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Email
            </th>
            <th>
                Order Status
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Orders)
         {
             <tr class="@(item.OrderStatus == "Order Complete" ? "success" : string.Empty) ">
                <td>
                     @Html.DisplayFor(modelItem => item.CreatedAt)
                 </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderStatus)
                </td>
                <td>
                    <div class="btn-group">
                        <a href="@Url.Action("UpdateOrder","OrderManager", new { Id=item.Id })" class="btn btn-default">Manage Order</a>
                        <a href="#" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("UpdateOrder","OrderManager", new { Id=item.Id })">Update Order</a></li>
                            <li><a href="@Url.Action("GenerateQRCode","OrderManager", new { Id=item.Id })">Generate QR Code</a></li>
                            @*<li><a href="#">Something else here</a></li>*@
                            <li class="divider"></li>
                            <li><a href="@Url.Action("DriverPortal","OrderManager", new { Id=item.Id })">Driver Portal</a></li>
                        </ul>
                    </div>
                </td>
             </tr>
         }

    </table>

</div>


