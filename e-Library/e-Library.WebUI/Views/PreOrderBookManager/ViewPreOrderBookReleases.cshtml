@model IEnumerable<e_Library.Core.Models.PreOrderBook>
@{
    ViewBag.Title = "Pre-Order Releases";
}

    <h2>Pre-Order Release Dates</h2>
    <br />
<table class="table">
    <tr>
        <th></th>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img class="img-thumbnail" style="height:50px" src="~/Content/BookImages/@item.Image" />
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>

            <td>
                <a href="@Url.Action("PublishBook","PreOrderBookManager", new { Id=item.Id })" class="btn btn-success">Publish Book</a>
            </td>
        </tr>
    }

</table>
