<div class="col-md-10">

    @foreach (var item in Model.PreOrderBooks)
    {

        <div class="col-md-2" style="height:370px;width:200px;padding:10px;margin:10px;border: solid thin whitesmoke">
            <div class="col-md-12">
                <img class="img" style="height:220px;width:150px;" src="~/Content/BookImages/@item.Image" />
            </div>
            <div class="col-md-12">
                <strong>@Html.ActionLink(item.BookName, "Details", new { id = item.Id })</strong>
            </div>
            <div class="col-md-12">
                <p>@item.Category</p>
            </div>
            <div class="col-md-12">
                <a id="PreOrder" href="@Url.Action("ContactForm", "PreOrderManager")" class="btn btn-default">Pre-Order</a>
            </div>
        </div>
    }
</div>
