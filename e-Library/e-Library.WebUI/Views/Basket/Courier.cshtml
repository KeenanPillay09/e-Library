@model e_Library.Core.Models.Order

<h3>Courier Options</h3>
<br />
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>No.</th>
            <th>Courier Type</th>
            <th>Description</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>1</td>
            <td>Standard Delivery</td>
            <td>Orders will be delivered to customers provided addresses between 2-7 working days</td>
            <td>R60.00</td>
        </tr>
        <tr>
            <td>2</td>
            <td>Express Delivery</td>
            <td>Orders will be delivered to customers provided addresses the next working day</td>
            <td>R95.00</td>
        </tr>
    </tbody>
</table>
<br />
<h4>NOTE: Free delivery for orders above the price of R350</h4>
<br />


@using (Html.BeginForm("Courier", "Basket", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Please select a courier method:</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <div class="col-md-10">
                Standary Delivery:  @Html.RadioButtonFor(model => model.DeliveryMethod, "Standard Delivery")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                Express Delivery:  @Html.RadioButtonFor(model => model.DeliveryMethod, "Express Delivery")
            </div>
        </div>
        <br />
    </div>


    <div class="form-group">
        <div class="col-md-2 col-md-10">
            <input type="submit" value="Calculate Order Total" class="btn btn-default" />
        </div>
    </div>

}
<div class="form-group">
    @Html.LabelFor(model => model.FinalTotal, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DisplayFor(model => model.FinalTotal, new { htmlAttributes = new { @class = "form-control" } })
    </div>
</div>

<div class="col-md-12">
    <a href="@Url.Action("ThankYou", "Basket")" class="btn btn-default">Proceed to Payment</a>
</div>





