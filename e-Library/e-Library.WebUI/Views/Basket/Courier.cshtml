@model e_Library.Core.Models.Order

<h3>Courier Options</h3>
<br />
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>No.</th>
            <th>Courier Type</th>
            <th>Description</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>1</td>
            <td>Standard Delivery</td>
            <td>Orders will be delivered to customers provided addresses between 2-7 working days</td>
            <td>R60.00</td>
        </tr>
        <tr>
            <td>2</td>
            <td>Express Delivery</td>
            <td>Orders will be delivered to customers provided addresses the next working day</td>
            <td>R95.00</td>
        </tr>
    </tbody>
</table>
<br />
<h4>NOTE: Free delivery for orders above the price of R350</h4>
<br />


@using (Html.BeginForm("Courier", "Basket", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <h4>Please select a courier method:</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Area, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(Model => Model.Area, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-lg-2 control-label">Delivery Method</label>
        <div class="col-lg-10">
            <div class="radio">
                <label>
                    @Html.RadioButtonFor(model => model.DeliveryMethod, "Standard Delivery")
                    Standard Delivery
                </label>
            </div>
            <div class="radio">
                <label>
                    @Html.RadioButtonFor(model => model.DeliveryMethod, "Express Delivery")
                    Express Delivery
                </label>
            </div>
        </div>
    </div>

    <br />
    <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
            <button type="submit" class="btn btn-success">Proceed to Payment</button>
        </div>
    </div>
</div>
}
<br />
